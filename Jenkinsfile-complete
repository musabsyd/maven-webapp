pipeline {
    agent any
    tools {
        maven "Maven"
    }
    stages {
        stage('Cloning') {
            steps {
                git 'https://github.com/musabsyd/maven-webapp.git'
                echo 'Code Cloned Succesfully'
            }
        }
        stage('mvn build') {
            steps {
                sh 'mvn clean package'
                echo 'maven build successfull'
            }
        } 
        stage('Code review') {
            steps {
                withSonarQubeEnv('sonar') {
                sh 'mvn sonar:sonar'
                echo 'Code review successfull'
                }
            }
        }  
        stage('docker build') {
            steps {
                sh 'docker build -t musabsyed/mavenwebapp .'
                echo 'docker image built successfully'
            }
        }

        stage('Trivy') {
            steps {
                sh 'trivy image musabsyed/mavenwebapp'
                echo 'trivy scan completed'
            }
        }

        stage('docker push'){
           steps {
              withCredentials([string(credentialsId: 'dockerpass', variable: 'docker_pass')]) {
                sh 'echo $docker_pass | docker login -u musabsyed --password-stdin'
                sh 'docker push musabsyed/mavenwebapp'
            }
          }
       }
        stage('k8s-deployment') {
            steps {
                sh 'kubectl apply -f k8s-deploy.yml'
                echo 'deployment completed successfully'
            }
        }  
    }
}
